<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Date</label>
                    <input type="text" class="form-control" id="dateTextField" placeholder="Enter the date" name="Date" value="<%= Workout.Date %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Exercise</label>
                    <input type="text" class="form-control" id="exerciseTextField" placeholder="Enter the exercise" name="Exercise" value="<%= Workout.Exercise %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Sets</label>
                    <input type="text" class="form-control" id="setsTextField" placeholder="Enter the # of sets" name="Sets" value="<%= Workout.Sets %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Reps</label>
                    <input type="text" class="form-control" id="repsTextArea"  placeholder="Enter the # of reps" name="Reps" required><%= Workout.Reps %>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>